<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ArtistDetailActivity">
    <include
        android:id="@+id/appbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/img_detail_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar" />

    <TextView
        android:id="@+id/txt_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/img_detail_image"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/txt_detail_listener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorSecundaryText"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_name"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/txt_detail_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_detail_listener"
        tools:layout_editor_absoluteX="-54dp"
        android:textStyle="italic"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>